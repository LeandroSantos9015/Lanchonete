<table border="0" width="100%">
    <tr>
        <td>
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens" asp-action="UploadFiles">
                <img src="~/Images/upload.bmp" width="200" height="150" />

                <div class="form-group">
                    <div class="col-md-10">
                        <p><b>Selecione um ou mais arquivos para enviar:</b></p>
                        <p><b>(Arquivos com o mesmo nome serão sobrescritos)</b></p>
                        <input type="file" name="files" multiple class="button btn-outline-primary" />
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Enviar Arquivo(s)" multiple class="button btn-outline-primary" />
                    </div>
                </div>
            </form>
        </td>
        <td>
            <form method="post" enctype="multipart/form-data" asp-controller="AdminImagens"
                  asp-action="GetImagens">
                <img src="~/Images/visualizar.bmp" width="200" height="150" />
                <div class="form-group">
                    <div class="col-md-10">
                        <p><strong>Viusalizar imagens na pasta do servidor</strong></p>

                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Visualizar arquvios no servidor" multiple class="button btn-outline-primary" />
                    </div>
                </div>

            </form>
        </td>
    </tr>
</table>

<div class="container">
    @if (ViewData["Deletado"] != null)
    {
        <li>@ViewData["Deletado"]</li>
    }
</div>