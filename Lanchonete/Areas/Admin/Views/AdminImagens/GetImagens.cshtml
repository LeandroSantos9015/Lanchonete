@model FileManagerModel

@{
    ViewBag.Title = "Arquivos";
}

@if (Model.Files != null)
{
    <h3>Imagens:</h3>
    <hr />
    var caminho = Model.PathImagesProduto;

    <div class="row">

        @foreach (var item in Model.Files)
        {
            <div class="column">
                <img src="~/@caminho/@item.Name" width="125" height="125">
                <div style="padding:10px;text-align:left">
                    <a href="@Url.Action("DeleteFile" , "AdminImagens" , new {fname=item.Name})">Deletar</a>
                </div>
            </div>

        }
    </div>
}



